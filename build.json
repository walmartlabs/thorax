{
  "modules": {
    "jquery": {
      "mixins": [
        "thorax-dep-jquery"
      ],
      "scripts": [
        "lib/handlebars.js"
      ]
    },
    "zepto": {
      "mixins": [
        "thorax-dep-zepto"
      ],
      "scripts": [
        "lib/handlebars.js"
      ]
    },

    "thorax": {
      "scripts": [
        {"src": "LICENSE", "global": true}
      ],
      "mixins": [
        "thorax",
        "thorax-helper-tags",
        "thorax-loading"
      ]
    },
    "thorax-mobile": {
      "scripts": [
        {"src": "LICENSE", "global": true}
      ],
      "mixins": [
        "thorax",
        "thorax-helper-tags",
        "thorax-loading",
        "thorax-mobile"
      ]
    },

    "test": {
      "mixins": [
        "test",
        "loaded-test-runner"
      ],
      "scripts": [
        "test/src/"
      ],
      "static": [
        {"src": "test/jquery.html", "dest": "jquery/test.html"},
        {"src": "test/zepto.html", "dest": "zepto/test.html"}
      ]
    }
  },
  "mixins": [
    "node_modules/phoenix-build/mixin",
    "."
  ],
  "scope": {
    "template": "src/fragments/scope.handlebars"
  }
}
